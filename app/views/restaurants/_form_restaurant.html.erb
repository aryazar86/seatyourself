<% options_arr = Category.all.map {|e| [e.name, e.id]} %>

<%= form_for @restaurant, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.label "Add an image" %><br>
    <%= f.file_field "image" %>
  <p>
    <%= f.label "Name" %><br>
    <%= f.text_field "name" %>
  </p>
   <p>
    <%= f.label "Address" %><br>
    <%= f.text_field "address" %>
  </p>
    <%= f.label "Neighbourhood" %><br>
    <%= f.text_field "neighbourhood" %>
  <p>
    <%= f.label "Food Category" %><br>
    <%= f.select("category_id", options_for_select(options_arr)) %>
  </p>
  <p>
    <%= f.label "Max Capacity" %><br>
    <%= f.number_field "capacity" %>
  </p>
  <p>
    <%= f.submit "Save", :class =>'form_button'%> 
  </p>
<% end %>